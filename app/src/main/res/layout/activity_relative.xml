<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="40dp">

    <TextView
        android:id="@+id/tv_setup_your_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Setup Your Plan"
        android:textColor="#000000"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/tv_you_can_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_setup_your_plan"
        android:text="You can change this any time in the settings"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="10dp"/>

    <RelativeLayout
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/tv_you_can_change"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pie_chart_img" />


        <TextView
            android:id="@+id/tv_setup_wizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Setup Wizard"
            android:textColor="#ffffff"
            android:textSize="25sp" />


        <View
            android:id="@+id/vw_divider1"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_setup_wizard"
            android:layout_marginLeft="10dp"
            android:background="#ffffff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_divider1"
            android:layout_marginLeft="9dp"
            android:padding="5dp"
            android:text="RECOMMENDED"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/block2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@id/block1"
        android:background="@drawable/gradient2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/equilizer" />

        <TextView
            android:id="@+id/start_from_scratch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Start from Scratch"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@id/start_from_scratch"
            android:layout_marginLeft="10dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/for_experts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:padding="10dp"
            android:text="FOR EXPERTS"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/block2"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/note" />

        <TextView
            android:id="@+id/templates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Templates"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@id/templates"
            android:layout_marginLeft="10dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/for_complete_beginners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:padding="12dp"
            android:text="FOR COMPLETE BEGINNERS"
            android:textColor="#ffffff"
            android:textSize="15sp" />


    </RelativeLayout>


</RelativeLayout>